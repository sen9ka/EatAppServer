<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_food_image"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:scaleType="fitXY"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_order_number"
                android:text="@string/_26_11_2019_13_05_06"
                android:textColor="@android:color/holo_blue_light"
                android:fontFamily="@font/brandon_medium"
                android:textStyle="italic"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time"
                android:text="@string/order_date_woah_letters"
                android:fontFamily="@font/brandon_medium"
                android:textStyle="italic"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_name"
                android:text="@string/name_senya"
                android:fontFamily="@font/brandon_medium"
                android:textStyle="italic"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_order_status"
                android:text="@string/order_status_placed"
                android:fontFamily="@font/brandon_medium"
                android:textStyle="italic"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_num_item"
                android:text="@string/num_of_items_10"
                android:fontFamily="@font/brandon_medium"
                android:textStyle="italic"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>